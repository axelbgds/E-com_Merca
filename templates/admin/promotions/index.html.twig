{% extends "base.html.twig" %}

{% block title %}Liste des promotions
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<aside class="col-10 border border-light bg-white p-2">
				{% include "_partials/_adminnav.html.twig" %}
			</aside>
			<main class="col-10 border border-light bg-white p-2 pt-3">
				<div class="div mt-4">
					<h1 class="mt-4">Liste des promotions</h1>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Date de d√©but</th>
							<th>Date de fin</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for promotion in promotions %}
							<tr>
								<td>{{ promotion.id }}</td>
								<td>{{ promotion.name }}</td>
								<td>{{ promotion.startDate|date("d/m/Y") }}</td>
								<td>{{ promotion.endDate|date("d/m/Y") }}</td>
								<td>
									<a href="{{ path('admin_promo_edit', {id: promotion.id}) }}" class="btn btn-success">Modifier</a>
									<a href="{{ path('admin_promo_delete', {id: promotion.id}) }}" class="btn btn-danger">Supprimer</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</main>
		</div>
	</div>
{% endblock %}
